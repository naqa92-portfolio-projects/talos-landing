{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/main/.schema/devbox.schema.json",
  "packages": [
    "tailwindcss_4@4.1.18"
  ],
  "shell": {
    "init_hook": [""],
    "scripts": {
      "css:build": "tailwindcss -i ./app/static/css/input.css -o ./app/static/css/style.css --minify",
      "css:watch": "tailwindcss -i ./app/static/css/input.css -o ./app/static/css/style.css --watch"
    }
  }
}